<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="https://example.org/2001/bottles">
    <xs:complexType>
        <xs:sequence>
            <xs:element name="bottle">
                <xs:element name="bottleID" type="xs:integer"/>
                <xs:element name="inStock" type="xs:boolean"/>
                <xs:complexType>
                    <xs:element name="shotPrice">
                        <xs:element name="value" type="xs:double"/>
                        <xs:element name="currency" type="xs:string"/>
                    </xs:element>
                </xs:complexType>
                <xs:complexType>
                    <xs:element name="bottlePrice">
                        <xs:element name="value" type="xs:double"/>
                        <xs:element name="currency" type="xs:string"/>
                    </xs:element>
                </xs:complexType>
                <xs:element name="barcode" type="xs:string"/>
                <xs:element name="purchaseDate" type="xs:dateTimeStamp"/>

                
                <xs:complexType>
                    <xs:element name="bottleDescription">
                        <xs:element name="name" type="xs:string"/>
                        <xs:element name="age" type="xs:integer"/>
                        <xs:element name="voltage" type="xs:integer"/>
                        <xs:complexType>
                            <xs:element name="distillery">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="name" type="xs:string"/>
                                        <xs:element name="founded" type="xs:gYear"/>
                                        <xs:complexType>
                                            <xs:sequence>
                                                <xs:element name="region">
                                                    <xs:element name="name" type="xs:string"/>
                                                </xs:element>
                                            </xs:sequence>
                                        </xs:complexType>
                                     </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:complexType>
                    </xs:element>
                </xs:complexType>

                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="transaction">
                            <xs:complexType>
                                <xs:element name="ammountML" type="xs:integer"/>
                                <xs:complexType>
                                    <xs:element name="price">
                                        <xs:element name="value" type="xs:double"/>
                                        <xs:element name="currency" type="xs:string"/> 
                                    </xs:element>
                                </xs:complexType>
                                <xs:element name="creationTime" type="xs:dateTimeStamp"/>
                                <xs:element name="customerID" type="xs:integer"/>
                            </xs:complexType>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>

                <xs:complexType>
                    <xs:sequence>
                        <xs:element name="ownership">
                            <xs:element name="shareSize" type="xs:integer"/>
                            <xs:element name="customerID" type="xs:integer"/>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>

                <xs:complexType>
                    <xs:sequence>
                        <xs:element name = "specialPrice">
                            <xs:complexType>
                                <xs:element name="price">
                                    <xs:element name="value" type="xs:double"/>
                                    <xs:element name="currency" type="xs:string"/> 
                                </xs:element>
                            </xs:complexType>
                            <xs:element name="customerID" type="xs:integer"/>
                        </xs:element>
                    </xs:sequence>
                </xs:complexType>
                
            </xs:element>
        </xs:sequence>
    </xs:complexType>
</xs:schema>