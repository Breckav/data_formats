{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "https://example.org/public-contracts-schema.json",
    "definitions": {
        "company": {
            "type": "object",
            "required": [
                "name",
                "id",
                "address"
            ],
            "properties": {
                "name": {
                    "anyOf": [
                        {
                            "type": "object",
                            "required": [
                                "cs"
                            ],
                            "properties": {
                                "cs": {
                                    "type": "string"
                                }
                            }
                        },
                        {
                            "type": "object",
                            "required": [
                                "en"
                            ],
                            "properties": {
                                "en": {
                                    "type": "string"
                                }
                            }
                        }
                    ]
                },
                "id": {
                    "type": "string",
                    "pattern": "^[0-9]{8}$"
                },
                "address": {
                    "type": "string"
                }
            }
        }
    },
    "type": "array",
    "title": "Public contracts",
    "minItems": 1,
    "items": {
        "type": "object",
        "title": "Public contract",
        "properties": {
            "uri": {
                "type": "string",
                "format": "uri"
            },
            "publishedTime": {
                "type": "string",
                "format": "date-time"
            },
            "contractData": {
                "type": "object",
                "properties": {
                    "title": {
                        "anyOf": [
                            {
                                "type": "object",
                                "required": [
                                    "cs"
                                ],
                                "properties": {
                                    "cs": {
                                        "type": "string"
                                    }
                                }
                            },
                            {
                                "type": "object",
                                "required": [
                                    "en"
                                ],
                                "properties": {
                                    "en": {
                                        "type": "string"
                                    }
                                }
                            }
                        ]
                    },
                    "price": {
                        "type": "object",
                        "required": [
                            "value",
                            "currency"
                        ],
                        "properties": {
                            "value": {
                                "type": "number"
                            },
                            "currency": {
                                "type": "string",
                                "format": "uri"
                            }
                        }
                    },
                    "contracting_authority": {
                        "$ref": "#/definitions/company"
                    },
                    "supplier": {
                        "$ref": "#/definitions/company"
                    },
                    "publisher": {
                        "type": "string"
                    }
                },
                "required": [
                    "title",
                    "price",
                    "contracting_authority",
                    "supplier"
                ]
            }
        },
        "required": [
            "uri",
            "publishedTime",
            "contractData"
        ]
    }
}
